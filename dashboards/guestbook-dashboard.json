{
    "dashboard": {
        "id": null,
        "title": "Guestbook Blue-Green Deployment Monitoring",
        "tags": [
            "guestbook",
            "blue-green"
        ],
        "style": "dark",
        "timezone": "browser",
        "panels": [
            {
                "id": 1,
                "title": "Blue vs Green Pod Count",
                "type": "stat",
                "targets": [
                    {
                        "expr": "count(kube_pod_info{pod=~\"guestbook-blue.*\", namespace=\"default\"})",
                        "legendFormat": "Blue Pods",
                        "refId": "A"
                    },
                    {
                        "expr": "count(kube_pod_info{pod=~\"guestbook-green.*\", namespace=\"default\"})",
                        "legendFormat": "Green Pods",
                        "refId": "B"
                    }
                ],
                "gridPos": {
                    "h": 8,
                    "w": 12,
                    "x": 0,
                    "y": 0
                },
                "fieldConfig": {
                    "defaults": {
                        "color": {
                            "mode": "palette-classic"
                        },
                        "custom": {
                            "displayMode": "list",
                            "orientation": "horizontal"
                        },
                        "mappings": [],
                        "thresholds": {
                            "steps": [
                                {
                                    "color": "green",
                                    "value": null
                                },
                                {
                                    "color": "red",
                                    "value": 80
                                }
                            ]
                        }
                    }
                }
            },
            {
                "id": 2,
                "title": "HTTP Requests Rate",
                "type": "graph",
                "targets": [
                    {
                        "expr": "rate(http_requests_total{job=\"guestbook-metrics-blue\"}[5m])",
                        "legendFormat": "Blue - {{method}} {{status}}",
                        "refId": "A"
                    },
                    {
                        "expr": "rate(http_requests_total{job=\"guestbook-metrics-green\"}[5m])",
                        "legendFormat": "Green - {{method}} {{status}}",
                        "refId": "B"
                    }
                ],
                "gridPos": {
                    "h": 8,
                    "w": 12,
                    "x": 12,
                    "y": 0
                },
                "yAxes": [
                    {
                        "label": "Requests/sec",
                        "show": true
                    },
                    {
                        "show": true
                    }
                ],
                "xAxis": {
                    "show": true
                },
                "legend": {
                    "show": true
                }
            },
            {
                "id": 3,
                "title": "CPU Usage by Version",
                "type": "graph",
                "targets": [
                    {
                        "expr": "rate(container_cpu_usage_seconds_total{pod=~\"guestbook-blue.*\", container=\"guestbook\"}[5m]) * 100",
                        "legendFormat": "Blue - {{pod}}",
                        "refId": "A"
                    },
                    {
                        "expr": "rate(container_cpu_usage_seconds_total{pod=~\"guestbook-green.*\", container=\"guestbook\"}[5m]) * 100",
                        "legendFormat": "Green - {{pod}}",
                        "refId": "B"
                    }
                ],
                "gridPos": {
                    "h": 8,
                    "w": 12,
                    "x": 0,
                    "y": 8
                },
                "yAxes": [
                    {
                        "label": "CPU %",
                        "show": true
                    },
                    {
                        "show": true
                    }
                ]
            },
            {
                "id": 4,
                "title": "Memory Usage by Version",
                "type": "graph",
                "targets": [
                    {
                        "expr": "container_memory_usage_bytes{pod=~\"guestbook-blue.*\", container=\"guestbook\"} / 1024 / 1024",
                        "legendFormat": "Blue - {{pod}}",
                        "refId": "A"
                    },
                    {
                        "expr": "container_memory_usage_bytes{pod=~\"guestbook-green.*\", container=\"guestbook\"} / 1024 / 1024",
                        "legendFormat": "Green - {{pod}}",
                        "refId": "B"
                    }
                ],
                "gridPos": {
                    "h": 8,
                    "w": 12,
                    "x": 12,
                    "y": 8
                },
                "yAxes": [
                    {
                        "label": "Memory (MB)",
                        "show": true
                    },
                    {
                        "show": true
                    }
                ]
            },
            {
                "id": 5,
                "title": "Active Service Target",
                "type": "stat",
                "targets": [
                    {
                        "expr": "kube_service_spec_selector{service=\"guestbook-bluegreen\", namespace=\"default\"}",
                        "legendFormat": "Active Version",
                        "refId": "A"
                    }
                ],
                "gridPos": {
                    "h": 4,
                    "w": 24,
                    "x": 0,
                    "y": 16
                },
                "fieldConfig": {
                    "defaults": {
                        "color": {
                            "mode": "thresholds"
                        },
                        "mappings": [
                            {
                                "options": {
                                    "blue": {
                                        "text": "BLUE"
                                    }
                                },
                                "type": "value"
                            },
                            {
                                "options": {
                                    "green": {
                                        "text": "GREEN"
                                    }
                                },
                                "type": "value"
                            }
                        ],
                        "thresholds": {
                            "steps": [
                                {
                                    "color": "blue",
                                    "value": null
                                }
                            ]
                        }
                    }
                }
            }
        ],
        "time": {
            "from": "now-1h",
            "to": "now"
        },
        "timepicker": {},
        "templating": {
            "list": []
        },
        "annotations": {
            "list": []
        },
        "refresh": "10s",
        "schemaVersion": 27,
        "version": 0,
        "links": []
    }
}